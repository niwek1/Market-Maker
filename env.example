# Market Making Bot Configuration
# Copy this file to .env and fill in your values
# NEVER commit real credentials to version control

# Exchange API Credentials
# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here
BINANCE_SANDBOX=true

# Kraken
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_secret_here
KRAKEN_SANDBOX=true

# Coinbase Pro
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here
COINBASE_SANDBOX=true

# Global Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_PORT=8000
METRICS_ENABLED=true

# Safety Settings
PAPER_TRADING=true
MAX_POSITION_OVERRIDE=
MAX_NOTIONAL_OVERRIDE=
KILL_SWITCH_ENABLED=true

# Database (optional - for persistence)
DATABASE_URL=sqlite:///mm_bot.db

# Monitoring (optional)
PROMETHEUS_GATEWAY_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Development
DEBUG=false
PROFILE_ENABLED=false
